# Maintainer: Gustavo Huarcaya <diavolo at qqta dot org>

pkgname=kdeplasma-applets-playbar
pkgver=0.6.1
pkgrel=1
pkgdesc="MPRIS2 client, written in QML for Plasma KDE"
arch=('any')
url="http://kde-apps.org/content/show.php?content=165396"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('cmake' 'automoc4')
source=("https://github.com/audoban/PlayBar/archive/v0.6.1/PlayBar-${pkgver}.tar.gz")
md5sums=('659047be95d21ae001a6e9d02bdec9c0')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../PlayBar-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=$(kde4-config --prefix)
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
